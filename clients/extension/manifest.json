{
  "name": "LinguaStream Audio Capture",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Stream tab audio to local Python server",
  "permissions": ["tabCapture", "offscreen"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "Start Capture"
  }
}
